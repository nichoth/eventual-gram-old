{
  "scripts": {
    "start": "concurrently --kill-others \"npm run serve\" \"npm run sass-watch\"",
    "serve": "budo src/index.js:bundle.js --pushstate --dir=public --live -- -t babelify -t [ envify --NODE_ENV development ] -dv",
    "sass-watch": "node-sass --watch src/style/main.scss --source-map-embed public/style.css",
    "preversion": "npm run lint && npm run deps && npm test",
    "postversion": "git push && git push --tags",
    "lint": "eslint .",
    "deps": "dependency-check package.json && dependency-check package.json --unused --entry test/*.js -i dependency-check -i eslint -i eslint-config-minlint -i tap-spec",
    "test": "tape test/*.js | tap-spec"
  },
  "dependencies": {
    "muxrpc": "^6.4.2",
    "pull-stream": "^3.6.14",
    "pull-stream-util": "^0.1.1",
    "pull-ws": "^3.3.1",
    "ssb-backlinks": "^0.7.3",
    "ssb-config": "^3.3.2",
    "ssb-gossip": "^1.1.0",
    "ssb-keys": "^7.2.0",
    "ssb-master": "^1.0.3",
    "ssb-replicate": "^1.3.0",
    "ssb-server": "^15.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "babelify": "^10.0.0",
    "browserify": "^15.2.0",
    "budo": "^10.0.4",
    "concurrently": "^3.5.1",
    "dependency-check": "^3.0.0",
    "envify": "^4.1.0",
    "eslint": "^4.16.0",
    "eslint-config-minlint": "^2.0.0",
    "node-sass": "^4.12.0",
    "route-event": "^1.0.5",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0"
  }
}
